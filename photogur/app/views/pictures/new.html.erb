<h2> New picture </h2>


<% if @picture.errors.any?%>
      <p><%= pluralize(@picture.errors.count, "error") %> prohibited this picture from being saved:</p>
      <ul>
      <% @picture.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
  <% end %>

<%= form_for @picture do |f| %>
  <div class="field">
    <p><%= f.label :title %></p>
    <p><%= f.text_field :title %></p>
  </div>

  <div class="field">
    <p><%= f.label :description %></p>
    <p><%= f.text_field :description %></p>
  </div>

  <div class="field">
    <p><%= f.label :url %></p>
    <p><%= f.text_field :url %></p>
  </div>

  <div class="field">
    <p><%= f.submit  %></p>
  </div>
<% end %>
